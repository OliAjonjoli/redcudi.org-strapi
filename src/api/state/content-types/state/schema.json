{
  "kind": "collectionType",
  "collectionName": "states",
  "info": {
    "singularName": "state",
    "pluralName": "states",
    "displayName": "State",
    "description": "Mexican states from INEGI"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "cities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::city.city",
      "mappedBy": "state"
    }
  }
}
